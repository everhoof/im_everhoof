$aside-width = 250px

*,
*:before,
*:after
	box-sizing border-box
	margin 0

#__nuxt,
#__layout
	height 100%

a
	color var(--primary-light)
	text-decoration none

	&:hover,
	&:active,
	&:focus
		color var(--primary)
		text-decoration none

.scrollbar
	&::-webkit-scrollbar
		width 8px

	&::-webkit-scrollbar-thumb
		background-color var(--scrollbar-thumb)
		border-radius 8px

	&::-webkit-scrollbar-track
		background-color var(--scrollbar-track)

.link
	&_no
		&_styles
			color inherit
			text-decoration none

ul
	margin 0
	padding 0
	list-style none

.icon
	max-width 100%
	max-height 100%

.page
	overflow hidden
	height 100%
	min-height 100%

	&__wrapper
		display flex
		flex-direction column
		height 100%

	&__body
		overflow hidden
		height 100%
		min-height 100%
		color var(--primary-text)
		font-family 'Open Sans', sans-serif
		font-size 14px
		line-height 1.4
		background var(--primary-background)

		&_overflow
			&_hidden
				overflow hidden

	&__header
		z-index 99
		width 100%

	&__main
		position relative
		display flex
		overflow hidden
		flex-grow 1
		flex-basis 100%

		&_state
			&_mobile-open
				& ^[0]__aside-footer
					right 0

					+above(size-m)
						right 'calc(-%s + 40px)' % $aside-width

		+above(size-m)
			&_state
				&_pc-open
					& ^[0]__chat
						margin-right $aside-width

					& ^[0]__footer
						margin-right -4px

					& ^[0]__aside-footer
						right 0

					& ^[0]__aside-menu
						transform rotate(180deg)

	&__chat
		display flex
		flex-direction column
		width 100%
		height 100%
		margin 0 20px 0 0
		defaultTransition(margin-right)

		+above(size-m)
			margin-right 4px

	&__footer
		background transparent
		defaultTransition(margin-right)

		+above(size-m)
			margin-right 36px

	&__aside
		position absolute
		top 0
		right -($aside-width)
		bottom 0
		z-index 100
		overflow hidden auto
		flex-shrink 0
		width $aside-width
		defaultTransition()

		&_state
			&_mobile-open
				right 0

				+above(size-m)
					right '-%s' % $aside-width

				& +
					& ^[0]__aside-button
						right $aside-width

			&_pc-open
				+above(size-m)
					right 0

		&-button
			position absolute
			top 0
			right 0
			bottom 0
			z-index 3
			display flex
			justify-content center
			align-items center
			width 18px
			fill currentColor
			cursor pointer
			background-color var(--gray_700)
			defaultTransition()

			+above(size-m)
				display none

		&-icon
			width 17px
			height 17px

	&__aside-footer
		position absolute
		right -($aside-width)
		bottom 0
		display flex
		width $aside-width
		height 52px
		padding 4px
		background-color var(--primary-background)
		defaultTransition(right)

		+above(size-m)
			right 'calc(-%s + 40px)' % $aside-width
			padding 4px 4px 4px 50px

	&__aside-menu
		position absolute
		top 10px
		left 4px
		display none
		width 32px
		height 32px
		margin 0
		padding 4px 0
		color var(--primary-text)
		cursor pointer
		background transparent
		border none
		outline none

		+above(size-m)
			display block

		&:hover
			color var(--accent-text)

		& .icon
			fill currentColor
