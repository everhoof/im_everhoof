.message-update-input
	display inline-block
	width 500px
	max-width 100%

	&__input
		flex-grow 1
		flex-basis 100%
		width 100%
		height 32px
		margin 0 8px 0 0
		padding 0 0 0 12px
		color var(--primary-text)
		background var(--secondary-background)
		border none
		border-radius 5px
		outline none

	&__actions
		color var(--gray_200)
		font-size 12px
		font-weight 600

	&__action
		margin 0
		padding 0
		color #4771f1
		font-weight 600
		cursor pointer
		background transparent
		border none
		border-bottom 1px dotted currentColor

		&:hover,
		&:focus
			color var(--gray_100)
