.message
	position relative
	display block
	flex-shrink 0
	min-height 60px
	padding 8px 50px 8px 70px
	line-height 22px
	defaultTransition(background)

	&:hover,
	&:active,
	&:focus
		background rgba(255, 255, 255, .05)

	&_view
		&_compact
			min-height unset
			padding 2px 50px 2px 16px

			& ^[0]
				&__content
					display flex

				&__header
					display flex
					margin-right 8px
					align-self flex-end

				&__timestamp
					margin-right 8px
					margin-left 0

				&__body
					flex-shrink 1

				&__text
					margin-bottom 0
					color var(--primary-text)

				&__avatar
					display none

	&_type
		&_system
			&:hover,
			&:active,
			&:focus
				background inherit

			& ^[0]
				&__header
					margin-right 0

				&__timestamp
					font-style italic

				&__author-name
					display none

				&__text
					font-style italic

	&__avatar
		position absolute
		top 33px
		left 20px
		width 40px
		height 40px
		user-select none
		border-radius 50%
		object-fit cover
		object-position center center

		&:first-child
			top 10px

		&_type
			&_default
				font-size 18px
				line-height 40px
				text-align center
				text-transform uppercase
				background rgba(255, 255, 255, .1)
				border-radius 50%

	&__author-name
		display inline-block
		vertical-align middle
		overflow hidden
		max-width 150px
		font-size 14px
		font-weight 600
		white-space nowrap
		text-overflow ellipsis
		cursor pointer

		&:hover
			text-decoration underline

	&__header
		min-height 22px
		font-size 0
		white-space pre-line

	&__timestamp
		display inline
		vertical-align middle
		margin-left 8px
		color var(--gray_300)
		font-size 11px
		white-space nowrap
		cursor default

	&__text
		margin 0 0 6px
		color var(--secondary-text)
		line-height 20px
		word-break break-word

		&:last-child
			margin-bottom 0

	&__emoji
		vertical-align bottom
		max-width 50px
		max-height 50px
		padding 1px
		object-fit contain

	&__body
		flex-shrink 0

	&__image
		display block
		max-width 80%
		height auto
		cursor pointer
		object-fit cover

	&__text
		display block
