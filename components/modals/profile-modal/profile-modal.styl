.profile-modal
	display block

	&__user
		display flex
		width 100%

	&__avatar
		display inline-block
		flex-shrink 0
		margin 0 16px 0 0

		&:last-child
			margin-right 0

	&__username
		display block
		margin 0 0 4px
		font-size 20px
		font-weight 600

	&__username-edit
		display inline-block
		vertical-align top
		width 24px
		height 24px
		margin 0 0 0 4px
		padding 0
		fill var(--gray_800)
		cursor pointer
		background transparent
		border none
		outline none
		transition fill .2s ease

		&:hover
			fill var(--gray_500)

	&__registered
		display block
		color var(--secondary-text)
		font-size 13px
		font-style italic
		white-space nowrap
