.reminder
	min-height 32px
	padding 4px 48px 4px 16px
	font-size 14px
	font-weight 600
	background #6887db

	&__content
		display flex
		justify-content space-between
		align-items center

	&__text
		margin 0 16px 0 0
		color var(--primary-background)
		text-shadow 1px 1px 1px #5b76bf

	&__button
		padding 8px 16px
		color var(--primary-background)
		font-size 13px
		font-weight bold
		line-height 14px
		cursor pointer
		background #5b76bf
		border none
		border-radius 2px
		outline none
		defaultTransition(color)

		&:hover
			color #cdd3e7

	&__close-button
		position absolute
		top 50%
		right 10px
		display inline-block
		margin-top -15px
		padding 6px
		color #ffffff
		cursor pointer
		background transparent
		border none
		border-radius 2px
		outline none
		defaultTransition(color, background)

		&:hover
			color var(--primary-background)
			background #5b76bf

	&__icon
		display block
		width 18px
		height 18px
		fill currentColor
