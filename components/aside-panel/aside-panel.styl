.aside-panel
	display block
	min-height 100%
	padding 0 0 60px
	background-color var(--secondary-background)

	&__section
		padding 0 17px 20px 10px

		+compact()
			padding-bottom 0

		&-title
			margin-bottom 10px
			padding 0 5px
			color var(--primary-text)
			font-size 14px
			font-weight 600
			user-select none

			+compact()
				margin-bottom 6px
				font-size 13px

		&:first-child
			padding-top 20px

		+compact()
			padding-top 10px

			&:first-child
				padding-top 10px
