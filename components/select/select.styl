$select-background-color = var(--select-background)
$select-border-color = var(--select-border)

.select
	position relative
	display block

	&__title
		position relative
		overflow hidden
		padding 8px 36px 8px 20px
		color var(--primary-text)
		white-space nowrap
		text-overflow ellipsis
		cursor pointer
		background $select-background-color
		border 1px solid $select-border-color
		border-radius 3px
		outline none

		&:hover,
		&:focus
			background rgba(255, 255, 255, .06)

		&:after
			content 'â–¼'
			position absolute
			right 8px
			font-size 11px
			line-height 16px

	&__list
		position absolute
		top 100%
		z-index 100
		overflow hidden
		min-width 100%
		margin 4px 0
		background var(--primary-background)
		border-radius 4px
		box-shadow 0 0 5px rgba(0, 0, 0, .6)

	&__item
		padding 8px 20px
		white-space nowrap
		cursor pointer
		user-select none
		border-bottom 1px solid rgba(0, 0, 0, .2)

		&:hover
			background rgba(0, 0, 0, .2)

		&:last-child
			border-bottom 0
