.chat
	position relative
	display flex
	overflow hidden auto
	flex-direction column-reverse
	width 100%
	height 100%
	margin-right 30px
	background var(--primary-background)
	scroll-behavior smooth

	+above(size-m)
		margin-right 0

	&__messages
		position absolute
		display flex
		justify-content flex-end
		flex-direction column
		width 100%
		min-height 100%
