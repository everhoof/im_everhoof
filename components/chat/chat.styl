.chat
	position relative
	display flex
	overflow hidden auto
	flex-direction column-reverse
	width 100%
	height 100%
	scroll-behavior smooth

	@-moz-document url-prefix()
		&
			background var(--primary-background)

	&__messages
		position absolute
		display flex
		justify-content flex-end
		flex-direction column
		width 100%
		min-height 100%
		padding 0 0 10px
